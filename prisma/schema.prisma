generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model student {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  course       String
  phoneNumber  String?
  registration String   @unique
  role          String
  advisorId     String?
  theme         String?
  description   String?
  advisor       professor?   @relation(fields: [advisorId], references: [id])
  invites       studentInvite[]
}

model professor {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  cpf         String
  role        String
  mentees     student[]
  studentInvites  studentInvite[]
}

model studentInvite {
  id             String   @id @default(uuid())
  professorName  String
  mensagem       String?
  createdAt      DateTime @default(now())
  studentId      String
  student        student  @relation(fields: [studentId], references: [id])
  advisorId      String 
  advisor        professor  @relation(fields: [advisorId], references: [id])
}
